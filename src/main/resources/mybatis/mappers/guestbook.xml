<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="guestbook">


	<!-- 전체리스트 -->
	<select id="selectList" resultType="com.javaex.vo.GuestbookVO">
	
		<![CDATA[
		
			select	no,
					name,
					password,
	                content,
	                date_format(reg_date, "%Y-%m-%d") regDate 
			from guestbook
			
		]]>

	</select>
	
	<!-- 전체글 갯수 구하기(페이징) -->
	<select id="selectTotalCount" resultType="int">
		<![CDATA[
			select count(*) count
			from guestbook
		]]>
	
	</select>

	

	
	<!-- 방명록 저장하기 -->
	<insert id="insert" parameterType="com.javaex.vo.GuestbookVO">
    	
    	<![CDATA[
	 	    insert into guestbook
		    values(null, #{name}, #{password}, #{content}, now())
		]]>
		
	</insert>




	<!-- 방명록 저장_키값 가져오기 -->
	<insert id="insertkey">
		
		<![CDATA[	
	    insert into guestbook
           values ( null, #{name }, #{password }, #{content }, now() )
    	]]>
	
		<selectKey keyProperty="no" resultType="int" order="AFTER">	
		     <![CDATA[
				select last_insert_id()
	         ]]>        
		</selectKey>

	</insert>



	<!-- 글 1개 가져오기 -->
	<select id="selectOne" parameterType = "int" resultType="com.javaex.vo.GuestbookVO">
		<![CDATA[	
		
			select	no,
					name,
                	content,
                	reg_date regDate 
		    from guestbook
		    where no = #{no}
				
		]]>
	</select>
	
	
	












	<!-- 방명록 삭제 -->

	<delete id="delete" parameterType="com.javaex.vo.GuestbookVO">
		
		<![CDATA[
			delete from guestbook
			where no = #{no}
			and password = #{password}
			
		]]>	
		
	</delete>





	

</mapper>
